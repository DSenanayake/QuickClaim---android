<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/card_view_margin"
    android:layout_marginLeft="@dimen/card_view_margin"
    android:layout_marginRight="@dimen/card_view_margin"
    android:elevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="5dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/claim_thumb_height">
        <ImageView
            android:id="@+id/claim_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/static_map"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/claim_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05 Feb 2017"
            android:layout_gravity="right|top"
            android:padding="4dp"
            android:background="#ddd"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/textColorPrimary"
            android:textAllCaps="true"
            />
        <TextView
            android:id="@+id/claim_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_light"
            android:textStyle="bold"
            android:text="Completed"
            android:gravity="center"
            android:textColor="@color/colorLight"
            android:padding="4dp"
            android:textAllCaps="true"
            android:layout_gravity="bottom" />
    </FrameLayout>

</android.support.v7.widget.CardView>